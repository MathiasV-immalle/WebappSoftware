@model webappSOFT.Models.SoundGenre

@{
    ViewData["Title"] = "Sounds";
}

<h2>Sounds</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Sounds" asp-action="Index" method="get">
    <p>
        <input type="submit" value="Filter" />
        Genre: <select asp-for="soundGenre" asp-items="Model.genres">
            <option value="">Search Genre</option>
        </select>
        Title: <input type="text" name="titleSearchString">
        Artist: <input type="text" name="artistSearchString">
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Artist1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Artist2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Artist3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Remix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sounds[0].Genre)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.sounds) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
