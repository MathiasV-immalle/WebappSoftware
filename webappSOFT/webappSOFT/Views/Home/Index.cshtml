@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/mountain.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        <div class="item">
            <img src="~/images/music2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        <div class="item">
            <img src="~/images/volume.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
        <div class="item">
            <img src="~/images/oortjes.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Welcome</h2>
        <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;to our new Soundapplication!</p>
    </div>
    <div class="col-md-3">
        <h2>Application uses</h2>
        <ul>
            <li>Search your favourite songs using our SoundWebApp!</li>
            <li>Log in with google or register with your own username and password!</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>How to</h2>
        <ul>
            <li>search a song by Genre? Just select one and click "Filter"!</li>
            <li>search a song by Title or Artist? Just type something and click "Filter"!</li>
            <li>search a song by Genre and Artist at the same time? Just select a genre and type something in the "Artist-box" and click "Filter"!</li>
            <li>create a new song? Don't hesitate, just click "Create New"!</li>
            <li>edit a song (you just added)? Click "Edit" at the left of the song!</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Overview</h2>
        <ul>
            <li>Home: The page you're looking at</li>
            <li>Sounds: Our Soundapplication</li>
            <li>About: Some more information about us</li>
            <li>Contact: Our contact details</li>
            <li>Register: Register a new account</li>
            <li>Log in: Log in with Google or with another existing account</li>
        </ul>
    </div>
</div>
